<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/TestDB</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">eden</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL82Dialect</property>
        <property name="hibernate.connection.pool_size">10</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">create</property>
        <mapping class="com.intetics.pojos.EntityName"/>
        <mapping class="com.intetics.pojos.Field"/>
        <mapping class="com.intetics.pojos.EntityValue"/>
        <mapping class="com.intetics.pojos.Company"/>
        <mapping class="com.intetics.pojos.User"/>
        <mapping class="com.intetics.pojos.Roles"/>
        <mapping class="com.intetics.pojos.restrictions.TextStringRestriction"/>
        <mapping class="com.intetics.pojos.restrictions.TextAreaRestriction"/>
        <mapping class="com.intetics.pojos.restrictions.NumberRestriction"/>
        <mapping class="com.intetics.pojos.restrictions.DateTimeRestriction"/>
        <mapping class="com.intetics.pojos.values.StringValues"/>
        <mapping class="com.intetics.pojos.values.NumberValues"/>
        <mapping class="com.intetics.pojos.values.DateValues"/>
    </session-factory>
</hibernate-configuration>

